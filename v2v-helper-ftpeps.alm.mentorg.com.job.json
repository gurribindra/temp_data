{
  "apiVersion": "batch/v1",
  "kind": "Job",
  "metadata": {
    "name": "v2v-helper-ftpeps.alm.mentorg.com",
    "namespace": "migration-system"
  },
  "spec": {
    "backoffLimit": 6,
    "completionMode": "NonIndexed",
    "completions": 1,
    "parallelism": 1,
    "podFailurePolicy": {
      "rules": [
        {
          "action": "FailJob",
          "onExitCodes": {
            "operator": "NotIn",
            "values": [
              0
            ]
          }
        }
      ]
    },
    "podReplacementPolicy": "Failed",
    "suspend": false,
    "template": {
      "metadata": {
        "labels": {
          "job-name": "v2v-helper-ftpeps.alm.mentorg.com",
          "startCutover": "yes",
          "vm-name": "ftpeps.alm.mentorg.com"
        }
      },
      "spec": {
        "containers": [
          {
            "command": [
              "/home/fedora/manager"
            ],
            "env": [
              {
                "name": "POD_NAME",
                "valueFrom": {
                  "fieldRef": {
                    "apiVersion": "v1",
                    "fieldPath": "metadata.name"
                  }
                }
              },
              {
                "name": "SOURCE_VM_NAME",
                "value": "ftpeps.alm.mentorg.com"
              }
            ],
            "envFrom": [
              {
                "secretRef": {
                  "name": "alm-vc-01-vmware-secret"
                }
              },
              {
                "secretRef": {
                  "name": "mob-lab-mob-sls-openstack-secret"
                }
              },
              {
                "configMapRef": {
                  "name": "pf9-env"
                }
              }
            ],
            "image": "quay.io/platform9/vjailbreak-v2v-helper:v0.1.12",
            "imagePullPolicy": "Always",
            "name": "fedora",
            "resources": {
              "limits": {
                "cpu": "4",
                "ephemeral-storage": "5Gi",
                "memory": "6Gi"
              },
              "requests": {
                "cpu": "1",
                "ephemeral-storage": "200Mi",
                "memory": "1Gi"
              }
            },
            "securityContext": {
              "privileged": true
            },
            "terminationMessagePath": "/dev/termination-log",
            "terminationMessagePolicy": "File",
            "volumeMounts": [
              {
                "mountPath": "/home/fedora/vmware-vix-disklib-distrib",
                "name": "vddk"
              },
              {
                "mountPath": "/dev",
                "name": "dev"
              },
              {
                "mountPath": "/home/fedora/scripts",
                "name": "firstboot"
              },
              {
                "mountPath": "/var/log/pf9",
                "name": "logs"
              }
            ]
          }
        ],
        "dnsPolicy": "ClusterFirst",
        "hostNetwork": true,
        "restartPolicy": "Never",
        "schedulerName": "default-scheduler",
        "securityContext": {},
        "serviceAccount": "migration-controller-manager",
        "serviceAccountName": "migration-controller-manager",
        "terminationGracePeriodSeconds": 120,
        "volumes": [
          {
            "hostPath": {
              "path": "/home/ubuntu/vmware-vix-disklib-distrib",
              "type": "Directory"
            },
            "name": "vddk"
          },
          {
            "hostPath": {
              "path": "/dev",
              "type": "Directory"
            },
            "name": "dev"
          },
          {
            "configMap": {
              "defaultMode": 420,
              "name": "firstboot-config-ftpeps.alm.mentorg.com"
            },
            "name": "firstboot"
          },
          {
            "hostPath": {
              "path": "/var/log/pf9",
              "type": "DirectoryOrCreate"
            },
            "name": "logs"
          }
        ]
      }
    }
  }
}
